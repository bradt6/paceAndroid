<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addPatient">

    <EditText
            android:layout_width="267dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/postcodeInput"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:hint="Postcode" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/suburbInput"/>
    <EditText
            android:layout_width="267dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/stateInput"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:hint="State" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/postcodeInput"/>
    <EditText
            android:layout_width="267dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/streetNumberInput"
            app:layout_constraintTop_toBottomOf="@+id/genderInput" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:hint="StreetNumber"/>
    <EditText
            android:layout_width="267dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/genderInput" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/medicareNumberInput" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:hint="Gender"/>
    <EditText
            android:layout_width="267dp"
            android:layout_height="39dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/medicareNumberInput"
            android:hint="Medicare Number"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/deviceIDInput"/>
    <android.support.v7.widget.LinearLayoutCompat android:layout_width="415dp"
                                                  android:layout_height="36dp"
                                                  android:layout_marginBottom="2dp"
                                                  app:layout_constraintBottom_toTopOf="@+id/emailInput"
                                                  android:layout_marginTop="8dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  android:id="@+id/linearLayoutCompat"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                                                  app:layout_constraintHorizontal_bias="0.833">
        <EditText
                android:layout_width="118dp"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_gravity="left"
                android:layout_margin="30sp"
                android:id="@+id/firstNameInput"
                android:hint="First Name" android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="16dp"/>

        <EditText
                android:layout_width="118dp"
                android:layout_margin="30sp"
                android:layout_height="42dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lastNameInput"
                android:hint="Last Name"
                android:layout_gravity="right"
                tools:layout_editor_absoluteY="48dp" tools:layout_editor_absoluteX="183dp"/>


    </android.support.v7.widget.LinearLayoutCompat>
    <EditText
            android:layout_width="275dp"
            android:layout_height="39dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/deviceIDInput"
            android:hint="Device ID" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/phoneNumberInput"/>
    <EditText
            android:layout_width="267dp"
            android:layout_height="39dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/phoneNumberInput"
            android:hint="@android:string/emptyPhoneNumber" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/emailInput"/>
    <EditText
            android:layout_width="267dp"
            android:layout_height="39dp"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/emailInput"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:hint="Email"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat"/>
    <EditText
            android:layout_width="267dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/streetNameInput"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:hint="Street Name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/streetNumberInput"/>
    <EditText
            android:layout_width="267dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/suburbInput"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:hint="Suburb" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/streetNameInput"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/patientAddButtonID" app:backgroundTint="#FF9800"
            app:srcCompat="@android:drawable/ic_input_add" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/stateInput"
            android:onClick="submitOnClick"/>
</android.support.constraint.ConstraintLayout>